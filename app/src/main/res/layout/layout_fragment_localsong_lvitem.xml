<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvsongtile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="独角戏"
            android:maxLines="1"
            android:textSize="18sp"
            android:textColor="#000"/>
        <ImageView
            android:id="@+id/iv_artistIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/known_artist_icon"
            android:layout_below="@id/tvsongtile"
            android:layout_marginTop="3dp"
            android:layout_alignLeft="@id/tvsongtile"/>

        <TextView
            android:id="@+id/tvartistandalbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_artistIcon"
            android:layout_alignTop="@id/iv_artistIcon"
            android:layout_marginLeft="5dp"
            android:maxLines="1"
            android:text="许茹芸·如果云知道"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/more_version_arrow"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"/>
</LinearLayout>