<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/nonettips"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_margin="8dp"
        android:background="#F0E68C"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/warnningicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/net_work_connect_tips_warning" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/warnningicon"
                android:text="似乎没有网络噢，请检查网络设置"
                android:textColor="#FBB75F" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/net_work_connect_tips_right" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivNoNetCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/net_work_connect_tips_cancel" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/mymusic_sousuo_bg"
        android:gravity="center">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/mainsearch" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:textColor="#C2C2C2" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="#fff">

        <RelativeLayout
            android:id="@+id/rl_local"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/allIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/mymusic_icon_allsongs_normal" />
            <TextView
                android:id="@+id/tvlocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/allIcon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textColor="#000"
                android:text="本地歌曲"
                android:textSize="18sp"/>
            <ImageView
                android:id="@+id/localrighticon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/more_right_pressed"/>
            <TextView
                android:id="@+id/tvlocalsongnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textColor="#A3A3A3"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/localrighticon"
                android:layout_marginRight="10dp"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="2px"
                android:background="#ccc"
                android:layout_alignLeft="@+id/tvlocal"
                android:layout_below="@id/tvlocal"
                android:layout_marginTop="15dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/downloadIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/mymusic_icon_download_normal" />
            <TextView
                android:id="@+id/tvdownload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/downloadIcon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textColor="#000"
                android:text="最新下载"
                android:textSize="18sp"/>
            <ImageView
                android:id="@+id/downloadrighticon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/more_right_pressed"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textColor="#A3A3A3"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/downloadrighticon"
                android:layout_marginRight="10dp"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="2px"
                android:background="#ccc"
                android:layout_alignLeft="@+id/tvdownload"
                android:layout_below="@id/tvdownload"
                android:layout_marginTop="15dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/historyIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/mymusic_icon_history_normal" />
            <TextView
                android:id="@+id/tvhistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/historyIcon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textColor="#000"
                android:text="最近播放"
                android:textSize="18sp"/>
            <ImageView
                android:id="@+id/historyrighticon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/more_right_pressed"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textColor="#A3A3A3"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/historyrighticon"
                android:layout_marginRight="10dp"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="2px"
                android:background="#ccc"
                android:layout_alignLeft="@+id/tvhistory"
                android:layout_below="@id/tvhistory"
                android:layout_marginTop="15dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/favoriteIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/mymusic_icon_favorite_normal" />
            <TextView
                android:id="@+id/tvfavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/favoriteIcon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textColor="#000"
                android:text="我喜欢"
                android:textSize="18sp"/>
            <ImageView
                android:id="@+id/favoriterighticon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/more_right_pressed"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textColor="#A3A3A3"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/favoriterighticon"
                android:layout_marginRight="10dp"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="2px"
                android:background="#ccc"
                android:layout_alignLeft="@+id/tvfavorite"
                android:layout_below="@id/tvfavorite"
                android:layout_marginTop="15dp"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的歌单"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#ccc"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <ImageView
                android:id="@+id/ivadd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#90B7B7B7"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_add_folder"/>
            <TextView
                android:id="@+id/tvadd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新建歌单"
                android:textColor="#000"
                android:layout_toRightOf="@id/ivadd"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:layout_centerVertical="true"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="2px"
                android:background="#ccc"
                android:layout_alignLeft="@id/tvadd"
                android:layout_below="@id/tvadd"
                android:layout_marginTop="15dp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>